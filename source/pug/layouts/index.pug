- url = ""

block setting
  - rootPath = ""
  - currentPage = ""

  - title = ""
  - canonical = ""
  - description = ""
  - ogtype = ""

doctype html
html(lang='ja' prefix="og: http://ogp.me/ns#")
  head
    meta(charset='utf-8')
    if currentPage === "index"
      title= title
    else
      title= title + " | "
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content= description)
    link(href= url + canonical, rel='canonical')
    meta(property='og:locale', content='ja_JP')
    meta(property='og:type', content= ogtype)
    if currentPage === "index"
      meta(property='og:title', content= title)
    else
      meta(property='og:title', content= title + " | ")
    meta(property='og:description', content= description)
    meta(property='og:site_name', content='')
    meta(property='og:image', content= url + "img/ogp.jpg")
    meta(property='og:url', content= url + canonical)
    meta(name='twitter:card', content='summary_large_image')
    link(href= rootPath + 'css/common.css', rel='stylesheet', media='all')
  body#body(class= currentPage)
    include ../partial/components/header.pug
    article.main
      block main
    include ../partial/components/footer.pug
    include ../partial/glsl.pug
    script(src= rootPath + "js/libs.js")
    script(src= rootPath + "js/common.js")
