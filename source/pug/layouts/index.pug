- url = "https://sadahisahiroki.github.io"
- version = "?v1.0.0";
- rootPath = "./";

block setting

doctype html
html(lang='ja' prefix="og: http://ogp.me/ns#")
  head
    meta(charset='utf-8')
    if currentPage === "index"
      title= title
    else
      title= title + " | "
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content= description)
    link(href= url + canonical, rel='canonical')
    meta(property='og:locale', content='ja_JP')
    meta(property='og:type', content= type)
    if currentPage === "index"
      meta(property='og:title', content= title)
    else
      meta(property='og:title', content= title + " | ")
    meta(property='og:description', content= description)
    meta(property='og:site_name', content= title)
    //- meta(property='og:image', content= url + "img/ogp.jpg")
    meta(property='og:url', content= url + canonical)
    //- meta(name='twitter:card', content='summary_large_image')
    link(href= rootPath + 'common.css' + version, rel='stylesheet', media='all')
    script(src= rootPath + "js/common.js" + version, defer)
  body#body(class= currentPage)
    a.hidden(href="#main") 本文へスキップ
    //- include ../partial/components/header.pug
    main.main#main
      block main
